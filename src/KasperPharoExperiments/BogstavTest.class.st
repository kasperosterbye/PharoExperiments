{ #category : #initialization }
BogstavTest >> findUnikeBogstaver [
	"Laver bogstaver om til bogstav->antal forekomster"
	|substrings minLængde maxLængde minAntal maxAntal|
	minLængde := 7. maxLængde := 7. minAntal := 3. maxAntal := 5.
	substrings := bogstaver substrings.
	bogstaver := Dictionary new.
	substrings do: [ :bogstav |
		(bogstav size >= minLængde and: [bogstav size <= maxLængde])
			ifTrue:[
				bogstaver at: bogstav asLowercase
					update: [ :antal | antal + 1 ] 
					initial: [ 1 ] ]
		 ].
	^ (bogstaver select: [ :a | a >= minAntal and:[ a <= maxAntal] ]) keys
	
	
]

